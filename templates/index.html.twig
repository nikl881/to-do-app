{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <h1 class="card-header">Hello <br> <strong> User </strong></h1>
                    {{ "now"|date("m/d/Y") }}
                    <div class="card-body">
                        <div class="header">
                            <form method="POST" action="{{ path('create_task') }}">
                                <input name="title" type="text" id="myInput" placeholder="Task title..."/>
                                <button type="submit" class="btn btn-danger px-4 "><i class="fas fa-plus"></i></button>
                            </form>
                        </div>
                        <ul class="mt-5">
                            {% for task in tasks %}
                                <li {% if task.status %} class="checked mt-1" {% endif %} >
                                    <a href class="{{ path('switch_status', {'id': task.id }) }}"> <span
                                                class="task-list-item">{{ task.title }} </span> </a
                                    ><a onclick="return confirm('Are you sure to delete?')"
                                        href="{{ path('delete_task', {'id':task.id }) }}"><span class="close"><i
                                                    class="fa fa-trash" aria-hidden="true"></i>
</span></a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}