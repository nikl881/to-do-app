{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-9">
                                <h1 class="ml-4">Hello <br> <strong> User </strong></h1>
                            </div>
                            <div class=" col-3">
                                <h5 class="custom-date"><strong><i class="fa fa-calendar"
                                                                   aria-hidden="true"></i> {{ "now"|date("m/d/Y") }}
                                    </strong></h5>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="header">
                                <form method="POST" action="{{ path('create_task') }}">
                                    <input name="title" type="text" id="myInput" placeholder="Task title..."/>
                                    <button type="submit" class="btn btn-danger px-4 "><i class="fas fa-plus"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                        <ul class="mt-5">
                            {% for task in tasks %}
                                <li {% if task.status %} class="checked mt-1" {% endif %}>
                                    <a href class="{{ path('switch_status', {'id': task.id }) }}"
                                       style="color: #222222"> <span
                                                class="task-list-item">{{ task.title }} </span> </a
                                    ><a onclick="return confirm('Are you sure to delete?')"
                                        href="{{ path('delete_task', {'id':task.id }) }}"><span class="close"><i
                                                    class="fa fa-trash" aria-hidden="true"></i></span></a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}