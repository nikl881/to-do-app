{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
        <div class="card mt-5">
            <h5 class="card-header">Hello <br> User <br>   {{ "now"|date("m/d/Y") }}</h5>
            <div class="card-body">
                <div class="header">
                    <form method="POST" action="{{ path('create_task') }}">
                        <input name="title" type="text" id="myInput" placeholder="Task title..."/>
                        <button type="submit" class="addBtn"><i class="fas fa-plus"></i></button>
                    </form>
                </div>
                <ul>
                    {% for task in tasks %}
                        <li {% if task.status %} class="checked" {% endif %} >
                            <a href="{{ path('switch_status', {'id': task.id }) }}"> <span
                                        class="task-list-item">{{ task.title }} </span> </a
                            ><a onclick="return confirm('Are you sure to delete?')"
                                href="{{ path('delete_task', {'id':task.id }) }}"><span class="close">X</span></a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            </div>
        </div>
    </div>
    </div>




    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

{% endblock %}
